CC=gcc
CFLAGS=-Wall -Wextra
OFLAGS=-O2 -march=native -mtune=native
DFLAGS=-g
LFLAGS=

TARGET=main

.PHONY: all clean

all: $(TARGET)

$(TARGET): main.o
        $(CC) $(LFLAGS) $^ -o $@

%.o: %.c
        $(CC) -c $(CFLAGS) $(OFLAGS) $(DFLAGS) $< -o $@

main.o: main.c

clean:
        rm -Rf *~ *.o $(TARGET)
