# FX variables
set $volume 5
set $brightness 10

# My shortcuts
bindsym $mod+Control+k exec amixer -D pulse sset Master $volume%+
bindsym $mod+Control+j exec amixer -D pulse sset Master $volume%-
bindsym $mod+Control+m exec amixer -D pulse sset Master toggle
bindsym $mod+Control+n exec nmcli networking toggle
bindsym $mod+Control+b exec brightnessctl set +$brightness
bindsym $mod+Shift+b exec brightnessctl set $brightness-

# i3 gaps setting
for_window [class="^.*"] border pixel 5
gaps inner 25
gaps outer 5

