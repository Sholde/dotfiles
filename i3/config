# Lock the system by displaying a screenshot of the system
set $i3lockwall sh ~/.config/i3/scripts/lock.sh
bindsym $mod+Control+l exec --no-startup-id $i3lockwall

# Start polybar to display a workspace bar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Start dunst
exec_always --no-startup-id "dunst &"

# Remove audio bell
exec_always --no-startup-id "xset -b"

# Start with a terminal
exec i3-sensible-terminal
